{
    "//": "scripts js Ã  lancer avec la commande 'npm run ...' ou via le 'task runner' de VScode pour automatiser les build et les deploiements",

    "name": "automation",
    "version": "0.2.0",
    "authors": "mike.maggire",
    "scripts": {
        "clean:jekyll": "jekyll clean && rimraf _site_ready2deploy",
        "build": "jekyll clean && jekyll build",
        
        "prelivebuild:jekyll": "jekyll clean && md _site",
        "livebuild:jekyll": "jekyll build --watch --incremental",
        "liveserve": "lite-server -c _studiojekyll/bs-config.json",
        "liverender": "parallelshell \"npm run livebuild:jekyll\" \"npm run liveserve\"",

        "prebuild:deploy": "jekyll clean && md _site && rimraf _site_ready2deploy && md _site_ready2deploy",
        "build:deploy" : "jekyll build",
        "build:test" : "npm run build:deploy -- --config _config.yml,_config_test.yml",
        "build:prod" : "npm run build:deploy -- --config _config.yml,_config_prod.yml",

        "predeploy:test": "npm run build:test",
        "deploy:test": ".\\_deploy\\deploy2test.bat",
        "postdeploy:test": ".\\_site_ready2deploy\\openurl.bat",

        "predeploy:prod": "npm run build:prod",
        "deploy:prod": ".\\_deploy\\deploy2prod.bat",
        "postdeploy:prod": ".\\_site_ready2deploy\\openurl.bat"
  }
} 
